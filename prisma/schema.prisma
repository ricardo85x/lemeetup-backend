generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  email String @unique
  password String
  places UserOnPlace[]
  @@map("users")
}
// TODO
// remove the count and replace it with ID auto increment
model RefreshTokens {
  id String @id @default(uuid())
  email String
  token String
  token_family String
  count Int

  @@map("refresh_tokens")
}


model Place {
  id String @id @default(uuid())
  name String
  description String
  latitude Float
  longitude Float

  users UserOnPlace[]

  @@map("place")
}


model UserOnPlace {
  owner Boolean
  joined_at DateTime @default(now())

  user_id String
  user Users @relation(fields:[user_id], references: [id])
  place_id String
  place Place @relation(fields:[place_id], references: [id])

  @@id([user_id, place_id])
  @@map("user_on_place")

}